<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.DatosHoyFrag">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/comidasTotalesCard"
                android:layout_width="match_parent"
                android:layout_height="126dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="20dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/gradient"
                    android:padding="6dp">

                    <TextView
                        android:id="@+id/comidasTotalesTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="6dp"
                        android:layout_marginTop="6dp"
                        android:paddingLeft="0dp"
                        android:text="Comidas Totales"
                        android:textColor="#FFFFFF"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/comidasTotalesValue"
                        android:layout_width="225dp"
                        android:layout_height="58dp"
                        android:layout_above="@+id/comidasTotalesSubtitulo"
                        android:layout_below="@+id/comidasTotalesTitle"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="6dp"
                        android:layout_marginTop="0dp"
                        android:layout_marginBottom="0dp"
                        android:gravity="start|center_vertical"
                        android:text="---"
                        android:textColor="#FFFFFF"
                        android:textSize="45sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/comidasTotalesSubtitulo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="6dp"
                        android:layout_marginBottom="6dp"
                        android:paddingLeft="0dp"
                        android:textColor="#FFFFFF"
                        android:textSize="15dp" />

                    <ImageView
                        android:id="@+id/ccomidasTotalesImage"
                        android:layout_width="122dp"
                        android:layout_height="92dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="10dp"
                        android:src="@drawable/meal" />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/comidasPagadasCard"
                android:layout_width="match_parent"
                android:layout_height="126dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="20dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/gradient"
                    android:padding="6dp">

                    <TextView
                        android:id="@+id/comidasPagadasTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="6dp"
                        android:layout_marginTop="6dp"
                        android:paddingStart="0dp"
                        android:text="Comidas Pagadas"
                        android:textColor="#FFFFFF"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/comidasPagadasValue"
                        android:layout_width="225dp"
                        android:layout_height="58dp"
                        android:layout_above="@+id/comidasPagadasSubtitulo"
                        android:layout_below="@+id/comidasPagadasTitle"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="6dp"
                        android:layout_marginTop="0dp"
                        android:layout_marginBottom="0dp"
                        android:gravity="start|center_vertical"
                        android:text="---"
                        android:textColor="#FFFFFF"
                        android:textSize="45sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/comidasPagadasSubtitulo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="6dp"
                        android:layout_marginBottom="6dp"
                        android:paddingLeft="0dp"
                        android:textColor="#FFFFFF"
                        android:textSize="15dp" />

                    <ImageView
                        android:id="@+id/comidasPagadasImage"
                        android:layout_width="122dp"
                        android:layout_height="92dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="10dp"
                        android:src="@drawable/piggy_bank" />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/comidasDonadasCard"
                android:layout_width="match_parent"
                android:layout_height="126dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="20dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/gradient"
                    android:padding="6dp">

                    <TextView
                        android:id="@+id/comidasDonadasTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="6dp"
                        android:layout_marginTop="6dp"
                        android:paddingLeft="0dp"
                        android:text="Comidas Donadas"
                        android:textColor="#FFFFFF"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/comidasDonadasValue"
                        android:layout_width="225dp"
                        android:layout_height="58dp"
                        android:layout_above="@+id/comidasDonadasSubtitulo"
                        android:layout_below="@+id/comidasDonadasTitle"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="6dp"
                        android:layout_marginTop="0dp"
                        android:layout_marginBottom="0dp"
                        android:gravity="start|center_vertical"
                        android:text="---"
                        android:textColor="#FFFFFF"
                        android:textSize="45sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/comidasDonadasSubtitulo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="6dp"
                        android:layout_marginBottom="6dp"
                        android:paddingLeft="0dp"
                        android:textColor="#FFFFFF"
                        android:textSize="15dp" />

                    <ImageView
                        android:id="@+id/comidasDonadasImage"
                        android:layout_width="122dp"
                        android:layout_height="92dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="10dp"
                        android:src="@drawable/give_love" />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/ingresoCard"
                android:layout_width="match_parent"
                android:layout_height="126dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="20dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/gradient"
                    android:padding="6dp">

                    <TextView
                        android:id="@+id/ingresoTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="6dp"
                        android:layout_marginTop="6dp"
                        android:paddingLeft="0dp"
                        android:text="Ingreso"
                        android:textColor="#FFFFFF"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/ingresoValue"
                        android:layout_width="225dp"
                        android:layout_height="58dp"
                        android:layout_above="@+id/ingresoSubtitulo"
                        android:layout_below="@+id/ingresoTitle"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="6dp"
                        android:layout_marginTop="0dp"
                        android:layout_marginBottom="0dp"
                        android:gravity="start|center_vertical"
                        android:text="---"
                        android:textColor="#FFFFFF"
                        android:textSize="45sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/ingresoSubtitulo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="6dp"
                        android:layout_marginBottom="6dp"
                        android:paddingLeft="0dp"
                        android:text="mxn"
                        android:textColor="#FFFFFF"
                        android:textSize="15dp" />

                    <ImageView
                        android:id="@+id/ingresoImage"
                        android:layout_width="122dp"
                        android:layout_height="92dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="10dp"
                        android:src="@drawable/money" />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/voluntariosPresentesCard"
                android:layout_width="match_parent"
                android:layout_height="126dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="20dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/gradient"
                    android:padding="6dp">

                    <TextView
                        android:id="@+id/voluntariosPresentesTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="6dp"
                        android:layout_marginTop="6dp"
                        android:paddingLeft="0dp"
                        android:text="Voluntarios Presentes"
                        android:textColor="#FFFFFF"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/voluntariosPresentesValue"
                        android:layout_width="225dp"
                        android:layout_height="58dp"
                        android:layout_above="@+id/voluntariosPresentesSubtitulo"
                        android:layout_below="@+id/voluntariosPresentesTitle"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="6dp"
                        android:layout_marginTop="0dp"
                        android:layout_marginBottom="0dp"
                        android:gravity="start|center_vertical"
                        android:text="---"
                        android:textColor="#FFFFFF"
                        android:textSize="45sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/voluntariosPresentesSubtitulo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="6dp"
                        android:layout_marginBottom="6dp"
                        android:paddingLeft="0dp"
                        android:textColor="#FFFFFF"
                        android:textSize="15dp" />

                    <ImageView
                        android:id="@+id/voluntariosPresentesImage"
                        android:layout_width="122dp"
                        android:layout_height="92dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="10dp"
                        android:src="@drawable/charity" />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>


        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
